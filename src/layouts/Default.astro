---
interface Props {
  noindex: boolean;
	title: string;
	description: string;
	image: string;
}

import BaseLayout from './BaseLayout.astro';
import Head from '@/components/seo/head.astro'

const { title, description, noindex, image } = Astro.props
---
<BaseLayout>
	<Fragment slot="head">
    <Head
      noindex={noindex}
      title={title}
      description={description}
			image={image}
    />
  </Fragment>

  <slot />
</BaseLayout>
