---
import Layout from "../layouts/Layout.astro";
import MenuComponent from "@/components/vue/MenuComponent.vue";
import SearchBar from "@/components/vue/SearchBar.vue";
import CardImovel from "@/components/vue/CardImovel.vue";
import Button from 'primevue/button';
---

<Layout>
	<!-- Hero -->
	<div class="flex w-full h-[calc(100vh-90px)] bg-primary-500 justify-center overflow-hidden">
		<div class="flex flex-col w-full h-full items-center z-20 justify-between py-8 px-container">
			<MenuComponent/>
			<div class="flex flex-col w-full justify-center items-center h-full">
				<span class="text-heading-5 text-white text-center font-bold max-w-2xl">
					Há 50 anos reimaginando vidas.
				</span>
			</div>
			<SearchBar/>
		</div>
		<div class="absolute z-0 h-[calc(100vh-90px)] w-full">
			<video
				class="object-cover opacity-10 pointer-events-none h-[calc(100vh-90px)] w-full"
				src="/video-home.mp4"
				autoplay
				loop
				muted
				playsinline
			/>
		</div>
	</div>
	
	<div class="flex flex-col gap-5 md:gap-10 py-4 md:py-16 px-container w-full">
		<section class="flex flex-col gap-8 md:gap-16 w-full">
			<!-- Title Section -->
			<div class="flex w-full justify-between h-fit">
				<h3 class="text-heading-3 font-bold">Imóveis Exclusivos para Alugar</h3>
				<Button
					rounded
					outlined
					size="small"
					label="Ver todos os imóveis exclusivos para alugar"
					icon="pi pi-arrow-right"
					icon-pos="right"
				/>
			</div>
			<!-- Card Grid -->
			<div class="w-full !m-0!p-0 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-x-14 md:gap-y-20">
				<CardImovel/>
				<CardImovel/>
				<CardImovel/>
				<CardImovel/>
				<CardImovel/>
				<CardImovel/>
				<CardImovel/>
			</div>
		</section>
	</div>
</Layout>
