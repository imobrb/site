---
import type { loadRenderers } from "astro:container";
import Layout from "../layouts/Layout.astro";
import Select from 'primevue/select';
import InputText from 'primevue/inputtext';
import Button from 'primevue/button';

---

<Layout>
	<div class="flex w-full h-[calc(100vh-90px)] bg-primary-500 items-center overflow-hidden">
		<div class="flex flex-col w-full h-full items-center z-20 justify-between py-8 px-container">
			<div class="flex flex-col w-full justify-center items-center h-full">
				<span class="text-heading-5 text-white text-center font-bold max-w-2xl">Há 50 anos reimaginando vidas.</span>
			</div>
			<div class="flex flex-row w-full gap-2">
				<div class="w-full bg-white rounded-full h-16">
					<Select v-model="selectedCity" variant="filled" selected="LO" :options="modes" optionLabel="name" placeholder="Select a City" class="w-full md:w-56" />
					<InputText placeholder="Buscar imóveis..." />
				</div>
				<Button label="Cancel" class="w-full"></Button>
			</div>
		</div>
		<div class="absolute z-0 h-[calc(100vh-90px)] w-full">
			<video
				class="object-cover opacity-10 pointer-events-none h-[calc(100vh-90px)] w-full"
				src="/video-home.mp4"
				autoplay
				loop
				muted
				playsinline
			/>
		</div>
	</div>
</Layout>

<script>
	import { ref } from "vue";
	const modes = ref([
		{ name: 'Locação', code: 'LO' },
		{ name: 'Compra', code: 'CA' },
	]);
</script>
